<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Healenium Test Suite" parallel="classes">
    
    <listeners>
        <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener"></listener>
    </listeners>
    
    <test verbose="2" name="Healenium Tests">
        <classes>
            <class name="tests.EnableDisableTest">
                <methods>
                    <include name="testEnable"/>
                    <include name="testDisable"/>
                </methods>
            </class>
            <class name="tests.RemoveAddTest">
                <methods>
                    <include name="testRemove"/>
                    <include name="testAdd"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>